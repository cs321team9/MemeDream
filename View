    private void addButtonActionPerformed(java.awt.event.ActionEvent evt){
        thumbCount++;
        ImageIcon icon = new ImageIcon(" ");
        Image image = icon.getImage();
        labels.add(new Thumbnail(image));
        update();
    }
    
    private void removeButtonActionPerformed(java.awt.event.ActionEvent evt){
        if(thumbCount >= 1){
            thumbCount--;
            Thumbnail del = labels.get(labels.size()-1);
            labels.remove(del);
        }
        update();
    }
     private void update() {
        panel.removeAll();
        labels.forEach((n)->{
            panel.add(n);
        });
        
        panel.revalidate();
        panel.repaint();
    
    

       
        jList1.setModel(new javax.swing.AbstractListModel<String>() {
            String[] strings = { "Cat", "Dog", "Baby", "Item 4", "Item 5", "Item 5", "Item 5", "Item 5"
            , "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5"
            , "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5", "Item 5"};
            public int getSize() { return strings.length; }
            public String getElementAt(int i) { return strings[i]; }
        });
        jScrollPane1.setViewportView(jList1);

        jTextField1.setText("");

        jButton1.setText("Search");

        jLabel1.setText("Popular Tag");
